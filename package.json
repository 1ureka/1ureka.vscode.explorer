{
  "name": "1ureka-vscode-explorer",
  "displayName": "1ureka 的 VS Code 系統瀏覽器套件",
  "author": "1ureka",
  "publisher": "1ureka",
  "description": "一個用於增強 VS Code 本地資源與系統管理的個人擴展套件",
  "version": "0.1.1",
  "main": "./dist/extension.js",
  "type": "module",
  "engines": {
    "vscode": "^1.106.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "1ureka.explorer.openFromDialog",
        "title": "開啟系統瀏覽器",
        "icon": "$(folder-library)"
      },
      {
        "command": "1ureka.explorer.openNavigation",
        "title": "開啟系統瀏覽器",
        "icon": "$(folder-library)"
      },
      {
        "command": "1ureka.explorer.openFromPath",
        "title": "在系統瀏覽器中顯示"
      },
      {
        "command": "1ureka.explorer.openFromFile",
        "title": "在系統瀏覽器中顯示"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "1ureka.explorer.openFromDialog"
        },
        {
          "command": "1ureka.explorer.openNavigation",
          "when": "false"
        },
        {
          "command": "1ureka.explorer.openFromPath",
          "when": "false"
        },
        {
          "command": "1ureka.explorer.openFromFile",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "1ureka.explorer.openFromPath",
          "when": "explorerResourceIsFolder",
          "group": "navigation@100"
        },
        {
          "command": "1ureka.explorer.openFromFile",
          "when": "!explorerResourceIsFolder",
          "group": "navigation@100"
        }
      ],
      "editor/title/context": [
        {
          "command": "1ureka.explorer.openFromFile",
          "when": "resourceScheme == file",
          "group": "navigation@100"
        }
      ],
      "view/title": [
        {
          "command": "1ureka.explorer.openNavigation",
          "when": "view == workbench.explorer.fileView",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "1ureka.explorer.openNavigation",
          "when": "true",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsx src/build.ts",
    "compile": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.5",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vscode/vsce": "^3.7.0",
    "colord": "^2.9.3",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "fs-extra": "^11.3.2",
    "fuse.js": "^7.1.0",
    "iconv-lite": "^0.7.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "zustand": "^5.0.8"
  }
}
